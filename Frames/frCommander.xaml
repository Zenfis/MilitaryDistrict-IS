<Page x:Class="MilitaryDistrict_IS.Frames.frCommander"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MilitaryDistrict_IS.Frames"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="frCommander">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="220"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="357"/>
            <RowDefinition Height="63"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="dgCommander" AutoGenerateColumns="False" FontFamily="Open Sans Light" Grid.ColumnSpan="3" IsReadOnly="True" SelectionChanged="dgCommander_SelectionChanged" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Код командира" Binding="{Binding Id}" Width="*"/>
                <DataGridTextColumn Header="Имя" Binding="{Binding Firstname}" Width="*"/>
                <DataGridTextColumn Header="Фамилия" Binding="{Binding Lastname}" Width="*"/>
                <DataGridTextColumn Header="Отчество" Binding="{Binding Patronym}" Width="*"/>
                <DataGridTextColumn Header="Код должности" Binding="{Binding RankId}" Width="*"/>
                <DataGridTemplateColumn Width="auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Редактировать" Name="EditThisCommander" Click="EditThisCommander_Click"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Добавить запись" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" FontFamily="Open Sans Light" Name="AddCommander" Margin="0,5,0,20" Width="126" Click="AddCommander_Click">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="6"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button Content="Удалить выделенную(ые) запись(и)" Grid.Column="2" Grid.Row="1" HorizontalAlignment="Center" FontFamily="Open Sans Light" Name="DeleteCommander" Margin="0,5,0,20" Width="200" Click="DeleteCommander_Click">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="6"/>
                </Style>
            </Button.Resources>
        </Button>
        <TextBlock Margin="0,10,0,0" TextWrapping="Wrap" Text="Командир" Foreground="Black" FontSize="20" MinWidth="324" MinHeight="30" Height="30" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Top" FontFamily="Open Sans Semibold" FontWeight="Bold" Grid.Column="1" Grid.Row="1"/>
    </Grid>
</Page>
